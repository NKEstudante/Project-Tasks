<p id="notice"><%= notice %></p>

  <div class="panel panel-info">
        
        <div class="panel-heading">Created <%= time_ago_in_words(@task.created_at) %> </div>
        
        <div class="panel-body">
        
        <ul class="list-group">
        
        <li class="list-group-item active">Content: <%= @task.content %></li>
        <li class="list-group-item">State: <%= @task.state %></li>
        <li class="list-group-item"><i class="fa fa-pencil-square" aria-hidden="true"></i> <%= link_to 'Edit', edit_task_path(@task) %></li>
        <li class="list-group-item"><i class="fa fa-trash-o" aria-hidden="true"></i> <%= link_to 'Destroy', @task, method: :delete, data: { confirm: 'Are you sure?' } %></li>
        </ul>
        
        </div>
        
        <div class="panel-footer text-center">
          
          <% if @task.state == "doing" %>
                <%= link_to '<i class="fa fa-pause-circle fa-2x" aria-hidden="true"></i>'.html_safe, change_task_path(@task, state: "to_do"), method: :put, :title => "Change state to do" %>
                <%= link_to '<i class="fa fa-check-circle fa-2x" aria-hidden="true"></i>'.html_safe, change_task_path(@task, state: "done"), method: :put, :title => "Change state to done" %>
            <% else %>
                <li><%= link_to '<i class="fa fa-clock-o fa-2x" aria-hidden="true"></i>'.html_safe, change_task_path(@task, state: "doing"), method: :put, :title => "Change state to doing" %></li>
            <% end %>
            
        </div>
        
  </div>
