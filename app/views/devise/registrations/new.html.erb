<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-signin'}) do |f| %>
  <h2>Sign up</h2>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true,placeholder: 'E-mail' ,autofocus: true, input_html: {class: 'form-control'} %>
    <%= f.input :password, required: true, placeholder: 'Password', input_html: {class: 'form-control'} , hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, placeholder: 'Retype password' , input_html: {class: 'form-control'}  , required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
  
  <%= render "devise/shared/links" %>
<% end %>

